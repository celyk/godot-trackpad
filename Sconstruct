import os

env = SConscript("godot-cpp/SConstruct").Clone()
#env.Tool("apple", toolpath=["tools"])

# Add support for generating compilation database files
#env.Tool("compilation_db")
#compiledb = env.CompilationDatabase("compile_commands.json")
#env.Alias("compiledb", compiledb)

def link_framework(framework_path, framework_name, header_path=""):
    # Add the framework to scons
    env.Append(LINKFLAGS=[
        "-F" + framework_path,
        "-framework", framework_name
    ])

    if header_path == "": return

    # Add the header path to the C++ compiler
    env.Append(CPPPATH=["-F" + header_path])

    # Add the header path to the Objective-C++ compiler
    env.Append(CXXFLAGS=["-F" + header_path])

if env["platform"] in ["macos"]:
    # Compile flags
    env.Append(LINKFLAGS="-framework Foundation")
    #env.Append(LINKFLAGS="-framework UIKit")

    # 1. Define the absolute path to the directory containing the .framework
    # This must be the folder INSIDE the .xcframework
    base_dir = os.getcwd()

    # Link the MultitouchSupport framework.
    link_framework("/System/Library/PrivateFrameworks", "MultitouchSupport", "/System/Library/PrivateFrameworks")

    # Link the OpenMultitouchSupport framework.
    framework_container = "./OpenMultitouchSupport/Framework/build/Build/Products/Release"
    if os.path.isdir(framework_container):
        link_framework(framework_path=framework_container, framework_name="OpenMultitouchSupportXCF", header_path=framework_container)

    # In case we can't build the framework. Include it in the root directory
    framework_container = "./dependencies/OpenMultitouchSupportXCF.xcframework/macos-arm64_x86_64/"
    if os.path.isdir(framework_container):
        link_framework(framework_path=framework_container, framework_name="OpenMultitouchSupportXCF", header_path=framework_container)

    # Expose the headers from the OpenMultitouchSupport framework. Gives us access to MultitouchSupport functions
    env.Append(CPPPATH=["./OpenMultitouchSupport/Framework/OpenMultitouchSupportXCF"])
    env.Append(CXXFLAGS=["./OpenMultitouchSupport/Framework/OpenMultitouchSupportXCF"])

    # If you put it in a subfolder like Contents/Frameworks in the app bundle:
    env.Append(LINKFLAGS=["-Wl,-rpath,@loader_path"])

    # Compile with debugging symbols
    if ARGUMENTS.get("debugging_symbols") == 'true':
        if "-O2" in env["CCFLAGS"]:
            env["CCFLAGS"].remove("-O2")
        env.Append(CCFLAGS=["-g", "-O0"])

    # Setup variant build dir for each setup
    def remove_prefix(s, prefix):
        return s[len(prefix):] if s.startswith(prefix) else s

    build_dir = "build/{}".format(remove_prefix(env["suffix"], "."))
    VariantDir(build_dir, 'src', duplicate=False)

    # Build Objective-C GDExtension
    source_directories = ["."]
    sources = [
        Glob("{}/{}/*.cpp".format(build_dir, directory)) + Glob("{}/{}/*.mm".format(build_dir, directory))
        for directory in source_directories
    ]
    library = env.SharedLibrary(
        "addons/godot_trackpad/build/libobjcgdextension{}{}".format(env["suffix"], env["SHLIBSUFFIX"]),
        source=sources,
        #LIBS=["OpenMultitouchSupport"],
        #LIBPATH=["OpenMultitouchSupport/Framework/build/Build/Products/Release/"],
    )

Default(library)
