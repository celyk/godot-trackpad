if env["platform"] in ["macos"]:
    # Compile flags
    env.Append(LINKFLAGS="-framework Foundation")
    #env.Append(LINKFLAGS="-framework UIKit")

    #env.Append(LIBS=["OpenMultitouchSupport"])
    #env.Append(LIBPATH=["./OpenMultitouchSupport/Framework/build/Build/Products/Release/Current"])
    
    framework_dir = "./OpenMultitouchSupport/Framework/build/Build/Products/Release/OpenMultitouchSupportXCF.framework/Current"
    framework_dir = "/Users/human/Documents/dev/GitHub/godot-trackpad/OpenMultitouchSupport/Framework/build/Build/Products/Release/OpenMultitouchSupportXCF.framework/Versions/Current"
    framework_dir = os.path.abspath("./OpenMultitouchSupport/Framework/build/Build/Products/Release/OpenMultitouchSupportXCF.framework/Versions/Current/")
    framework_dir = "./OpenMultitouchSupport/Framework/build/Build/Products/Release/OpenMultitouchSupportXCF.framework/Versions/Current/"
    framework_dir = "./OpenMultitouchSupport/Framework/build/Build/Products/Release/OpenMultitouchSupportXCF.framework"
    #env.Append(CPPPATH=["/Users/human/Documents/dev/GitHub/godot-trackpad/OpenMultitouchSupport/Framework/build/Build/Products/Release/OpenMultitouchSupportXCF.framework/Headers"])
    
    # Add the directory containing the framework to the search path
    #env.Append(FRAMEWORKPATH=[framework_dir])

    # Specify the framework name to link against (without the .framework extension)
    #env.Append(FRAMEWORKS=['OpenMultitouchSupport'])

    #env.Append(LIBPATH=[framework_dir])
    #env.Append(CPPPATH=[framework_dir + "Headers"])
    
    #xcframework = env.XCFramework("./OpenMultitouchSupport/Framework/build/Build/Products/Release/OpenMultitouchSupportXCF.framework")
    env.Depends(framework_dir, framework_dir+"Headers")

    #env.Append(LINKFLAGS="-framework OpenMultitouchSupport")

    # Compile with debugging symbols
    if ARGUMENTS.get("debugging_symbols") == 'true':
        if "-O2" in env["CCFLAGS"]:
            env["CCFLAGS"].remove("-O2")
        env.Append(CCFLAGS=["-g", "-O0"])

    # Setup variant build dir for each setup
    def remove_prefix(s, prefix):
        return s[len(prefix):] if s.startswith(prefix) else s

    build_dir = "build/{}".format(remove_prefix(env["suffix"], "."))
    VariantDir(build_dir, 'src', duplicate=False)

    # Build Objective-C GDExtension
    source_directories = ["."]
    sources = [
        Glob("{}/{}/*.cpp".format(build_dir, directory)) + Glob("{}/{}/*.mm".format(build_dir, directory))
        for directory in source_directories
    ]
    library = env.SharedLibrary(
        "addons/godot_trackpad/build/libobjcgdextension{}{}".format(env["suffix"], env["SHLIBSUFFIX"]),
        source=sources,
        #LIBS=["OpenMultitouchSupport"],
        #LIBPATH=["OpenMultitouchSupport/Framework/build/Build/Products/Release/"],
    )

Default(library)
